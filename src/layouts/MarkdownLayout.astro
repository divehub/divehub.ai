---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title || "DiveHub"}>
    <main class="main-wrapper">
         <!-- Background Gradients (Reused) -->
         <div class="bg-gradient-wrapper">
            <div class="bg-gradient-orb orb-1"></div>
            <div class="bg-gradient-orb orb-2"></div>
            <div class="bg-overlay"></div>
        </div>

        <Header />

        <div class="container content-wrapper animate-fade-in">
            <div class="glass-card page-card">
                <slot />
            </div>
        </div>

        <Footer />
    </main>
</Layout>

<style>
    .main-wrapper {
        position: relative;
        overflow: hidden;
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

     /* Background Gradients */
     .bg-gradient-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -10;
        overflow: hidden;
    }

    .bg-gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
    }

    .orb-1 {
        top: -10%;
        left: -10%;
        width: 50vw;
        height: 50vw;
        background: rgba(37, 99, 235, 0.2); 
    }

    .orb-2 {
        bottom: -10%;
        right: -10%;
        width: 50vw;
        height: 50vw;
        background: rgba(6, 182, 212, 0.1); 
    }
    
    .bg-overlay {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at center, transparent 0%, var(--color-bg) 100%);
    }

    .content-wrapper {
        flex: 1;
        padding-top: 2rem;
        padding-bottom: 2rem;
        max-width: 800px;
    }

    .page-card {
        padding: 2rem; /* Reduced padding for mobile, larger in media query */
    }

    @media (min-width: 768px) {
        .page-card {
            padding: 4rem;
        }
    }

    /* Markdown Styling */
    :global(.page-card h1) {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: white;
        text-align: center;
    }

    :global(.page-card h2) {
        font-size: 1.5rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: white;
    }

    :global(.page-card p) {
        margin-bottom: 1rem;
        color: #d1d5db;
        line-height: 1.7;
    }

    :global(.page-card ul) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
        color: #d1d5db;
    }

    :global(.page-card li) {
        margin-bottom: 0.5rem;
    }

    :global(.page-card strong) {
        color: white;
    }
</style>
