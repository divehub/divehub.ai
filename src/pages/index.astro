---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="DiveHub - The Future of Dive Planning">
	<main class="main-wrapper">
        <!-- Background Gradients -->
        <div class="bg-gradient-wrapper">
            <div class="bg-gradient-orb orb-1"></div>
            <div class="bg-gradient-orb orb-2"></div>
            <div class="bg-overlay"></div>
        </div>

        <Header />

		<section class="container hero-section">
            <div class="hero-content">
                <div class="app-icon-wrapper animate-fade-in">
                    <div class="app-icon">
                        <svg viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect width="120" height="120" rx="26" fill="url(#appGradient)"/>
                            <path d="M60 30L75 45L60 60L45 45L60 30Z" fill="white" opacity="0.9"/>
                            <path d="M60 60L75 75L60 90L45 75L60 60Z" fill="white" opacity="0.7"/>
                            <circle cx="60" cy="60" r="8" fill="white"/>
                            <defs>
                                <linearGradient id="appGradient" x1="0" y1="0" x2="120" y2="120">
                                    <stop offset="0%" stop-color="#2563eb"/>
                                    <stop offset="100%" stop-color="#06b6d4"/>
                                </linearGradient>
                            </defs>
                        </svg>
                    </div>
                </div>
                
                <h1 class="hero-title animate-fade-in animate-delay-100">
                    <span class="gradient-text">DiveHub</span><br />
                    Multi Dive Tool
                </h1>
                
                <p class="hero-subtitle animate-fade-in animate-delay-200">
                    Professional dive planning and decompression calculator
                    <br />
                    Advanced algorithms meet intuitive design
                </p>

                <div class="cta-group animate-fade-in animate-delay-300">
                    <a href="https://apps.apple.com/us/app/divehub-multi-dive-tool/id6756101582" 
                       target="_blank" 
                       rel="noopener noreferrer" 
                       class="app-store-button">
                        <svg class="apple-logo" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
                        </svg>
                        <div class="app-store-text">
                            <span class="download-text">Download on the</span>
                            <span class="store-text">App Store</span>
                        </div>
                    </a>
                </div>

                <div class="device-stats animate-fade-in animate-delay-400">
                    <div class="stat-item">
                        <div class="stat-icon">ðŸ“Š</div>
                        <div class="stat-label">Rich Visualization</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">ðŸ“±</div>
                        <div class="stat-label">iOS Native</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">âš¡</div>
                        <div class="stat-label">Lightning Fast</div>
                    </div>
                </div>
            </div>

            <!-- Features Grid -->
            <div class="features-grid animate-fade-in animate-delay-500">
                <div class="feature-card glass-card">
                    <div class="feature-icon">ðŸŒŠ</div>
                    <h3>Multi-Dive Planning</h3>
                    <p>Plan multiple dives with advanced decompression calculations</p>
                </div>
                <div class="feature-card glass-card">
                    <div class="feature-icon">âœ¨</div>
                    <h3>Modern UX</h3>
                    <p>Intuitive interface with smooth animations and gesture controls</p>
                </div>
                <div class="feature-card glass-card">
                    <div class="feature-icon">ðŸ“Š</div>
                    <h3>Detailed Analysis</h3>
                    <p>Visual dive profiles and tissue saturation monitoring</p>
                </div>
            </div>
		</section>

        <Footer />
	</main>
</Layout>

<style>
    .main-wrapper {
        position: relative;
        overflow: hidden;
        width: 100%;
        min-height: 100vh;
    }

    /* Background Gradients */
    .bg-gradient-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -10;
        overflow: hidden;
    }

    .bg-gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
    }

    .orb-1 {
        top: -10%;
        left: -10%;
        width: 50vw;
        height: 50vw;
        background: rgba(37, 99, 235, 0.2); /* blue-600/20 */
    }

    .orb-2 {
        bottom: -10%;
        right: -10%;
        width: 50vw;
        height: 50vw;
        background: rgba(6, 182, 212, 0.1); /* cyan-500/10 */
    }
    
    .bg-overlay {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at center, transparent 0%, var(--color-bg) 100%);
    }

    /* Hero */
    .hero-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        text-align: center;
        padding-top: 4rem;
        padding-bottom: 4rem;
    }

    .hero-content {
        max-width: 48rem;
        margin: 0 auto;
    }

    /* App Icon */
    .app-icon-wrapper {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .app-icon {
        width: 120px;
        height: 120px;
        border-radius: 26px;
        box-shadow: 
            0 10px 40px rgba(37, 99, 235, 0.3),
            0 0 0 1px rgba(255, 255, 255, 0.1);
        transition: transform 0.3s ease;
    }

    .app-icon:hover {
        transform: scale(1.05);
    }

    .app-icon svg {
        width: 100%;
        height: 100%;
        display: block;
    }

    .badge {
        display: inline-block;
        padding: 0.375rem 1rem;
        border-radius: 9999px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(4px);
        font-size: 0.875rem;
        color: var(--color-accent);
        margin-bottom: 2rem;
    }

    .hero-title {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        letter-spacing: -0.02em;
    }
    
    @media (min-width: 768px) {
        .hero-title {
            font-size: 4rem;
        }
    }

    .gradient-text {
        background: linear-gradient(to right, #22d3ee, #2563eb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: 1.125rem;
        color: var(--color-text-muted);
        max-width: 42rem;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 2.5rem;
        line-height: 1.8;
    }

    /* App Store Button */
    .cta-group {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        align-items: center;
        margin-bottom: 3rem;
    }

    .app-store-button {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 2rem;
        background: #000;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .app-store-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 30px rgba(0, 0, 0, 0.4);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .apple-logo {
        width: 32px;
        height: 32px;
        flex-shrink: 0;
    }

    .app-store-text {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        line-height: 1.2;
    }

    .download-text {
        font-size: 0.75rem;
        opacity: 0.8;
    }

    .store-text {
        font-size: 1.25rem;
        font-weight: 600;
    }

    /* Device Stats */
    .device-stats {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        margin-top: 3rem;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .stat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .stat-icon {
        font-size: 2rem;
    }

    .stat-label {
        font-size: 0.875rem;
        color: var(--color-text-muted);
        font-weight: 500;
    }

    /* Features Grid */
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        margin-top: 5rem;
        width: 100%;
        max-width: 1200px;
    }

    .feature-card {
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-4px);
        border-color: rgba(255, 255, 255, 0.15);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .feature-card h3 {
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
        color: white;
    }

    .feature-card p {
        color: var(--color-text-muted);
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .btn-text {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        color: var(--color-text-muted);
        transition: color 0.2s;
    }

    .btn-text:hover {
        color: white;
    }

    /* Dashboard Preview */
    .dashboard-preview {
        margin-top: 5rem;
        width: 100%;
        max-width: 1024px;
        aspect-ratio: 16 / 9;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-text-muted);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        transform: perspective(1000px) rotateX(5deg);
        transition: transform 0.5s ease;
    }
    
    .dashboard-preview:hover {
        transform: perspective(1000px) rotateX(2deg);
    }
</style>
