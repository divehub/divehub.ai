---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="DiveHub - The Future of Dive Planning">
	<main class="main-wrapper">
        <!-- Background Gradients -->
        <div class="bg-gradient-wrapper">
            <div class="bg-gradient-orb orb-1"></div>
            <div class="bg-gradient-orb orb-2"></div>
            <div class="bg-overlay"></div>
        </div>

        <Header />

		<section class="container hero-section">
            <div class="hero-content">
                <div class="badge animate-fade-in">
                    âœ¨ The Next Generation of Dive Planning
                </div>
                
                <h1 class="hero-title animate-fade-in animate-delay-100">
                    Explore the Depths <br />
                    <span class="gradient-text">With Confidence</span>
                </h1>
                
                <p class="hero-subtitle animate-fade-in animate-delay-200">
                    Advanced algorithms, intuitive design, and seamless synchronization. 
                    DiveHub brings professional-grade planning to your fingertips.
                </p>

                <div class="cta-group animate-fade-in animate-delay-300">
                    <a href="#" class="btn btn-primary">
                        Get Started Free
                    </a>
                    <a href="#" class="btn-text">
                        View Demo &rarr;
                    </a>
                </div>
            </div>

            <!-- Dashboard Mockup Placeholder -->
            <div class="dashboard-preview glass-card animate-fade-in animate-delay-300">
                <p>App Dashboard Preview</p>
            </div>
		</section>

        <Footer />
	</main>
</Layout>

<style>
    .main-wrapper {
        position: relative;
        overflow: hidden;
        width: 100%;
        min-height: 100vh;
    }

    /* Background Gradients */
    .bg-gradient-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -10;
        overflow: hidden;
    }

    .bg-gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
    }

    .orb-1 {
        top: -10%;
        left: -10%;
        width: 50vw;
        height: 50vw;
        background: rgba(37, 99, 235, 0.2); /* blue-600/20 */
    }

    .orb-2 {
        bottom: -10%;
        right: -10%;
        width: 50vw;
        height: 50vw;
        background: rgba(6, 182, 212, 0.1); /* cyan-500/10 */
    }
    
    .bg-overlay {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at center, transparent 0%, var(--color-bg) 100%);
    }

    /* Hero */
    .hero-section {
        display: flex;
        flex-col-gap: 2rem;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        text-align: center;
        padding-top: 4rem;
    }

    .hero-content {
        max-width: 48rem; /* 3xl */
        margin: 0 auto;
    }

    .badge {
        display: inline-block;
        padding: 0.375rem 1rem;
        border-radius: 9999px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(4px);
        font-size: 0.875rem;
        color: var(--color-accent);
        margin-bottom: 2rem;
    }

    .hero-title {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        letter-spacing: -0.02em;
    }
    
    @media (min-width: 768px) {
        .hero-title {
            font-size: 4.5rem;
        }
    }

    .gradient-text {
        background: linear-gradient(to right, #22d3ee, #2563eb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        color: var(--color-text-muted);
        max-width: 42rem;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 2.5rem;
    }

    .cta-group {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        align-items: center;
    }

    .btn-text {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        color: var(--color-text-muted);
        transition: color 0.2s;
    }

    .btn-text:hover {
        color: white;
    }

    /* Dashboard Preview */
    .dashboard-preview {
        margin-top: 5rem;
        width: 100%;
        max-width: 1024px;
        aspect-ratio: 16 / 9;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-text-muted);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        transform: perspective(1000px) rotateX(5deg);
        transition: transform 0.5s ease;
    }
    
    .dashboard-preview:hover {
        transform: perspective(1000px) rotateX(2deg);
    }
</style>
